@model LuanVan.Areas.Store.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/ishop.png">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-6 col-10">
            <div class="card shadow border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        ;
                        <fieldset>
                            <div class="form-floating">
                                @Html.TextBoxFor(model => model.Username,
                            new
                            {
                            @id = "sdt",
                            @class = "form-control",
                            @placeholder = "Số điện thoại",
                            @autofocus = "autofocus"
                            })
                                <label for="sdt">Số điện thoại/Email</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger p-2"})


                            <div class="form-floating">
                                @Html.TextBoxFor(model => model.Password,
                            new
                            {
                            @id = "Password",
                            @class = "form-control",
                            @placeholder = "Password",
                            @type = "password"
                            })
                                <label for="Password">Mật khẩu</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger p-2" })
                            <div class="form-check">
                                @Html.CheckBoxFor(model => model.Rememberme,
                            new
                            {
                            @id = "Rememberme"
                            })
                                <label class="form-check-label" for="Rememberme">
                                    Ghi nhớ số điện thoại đăng nhập
                                </label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-1 mb-0">
                                <button type="submit" class="btn btn-success mx-auto">Đăng nhập</button>
                            </div>
                            <a href="/Store/Login/Register" class="text-primary text-decoration-none">Đăng kí tài khoản</a>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")
</body>
</html>
