@model IEnumerable<LuanVan.Models.HoaDon>


@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
<div class="product-area section pt-4">
    <div class="container col-7">
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h3>Lịch sử thanh toán</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-2">
                        <div class="table-responsive">
                            <table class="table v-middle table-hover mb-0">
                                <thead class="thead-light">
                                    <tr class="bg-light">
                                        <th>STT</th>
                                        <th>Mã hóa đơn</th>
                                        <th>Ngày thanh toán</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1;
                                    }
                                    @foreach (var hoaDon in Model)
                                    {
                                        <tr>
                                            <td>@stt @{
                                                    stt++;
                                                }</td>
                                            <td>
                                                <a href="/Store/Receipt/Detail?mahd=@hoaDon.MaHoaDon">@hoaDon.MaHoaDon</a>
                                            </td>
                                            <td>
                                                @hoaDon.NgayXuatHd
                                            </td>
                                            <td>
                                                <a href="/Store/Receipt/Detail?mahd=@hoaDon.MaHoaDon" class="text-primary text-decoration-none">Chi tiết</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
